<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAltarboy"
    android:background="@color/white"
    android:layout_centerVertical="true"
    android:gravity="center">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp">
            <TextView
                android:id="@+id/themlesinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Lễ Sinh"
                android:textSize="30dp"
                android:textColor="#CD1515"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/them_tenthanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/themlesinh"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Tên Thánh"
                android:textColor="#373737"
                android:textColorHint="#959595"
                android:textSize="20dp"
                android:inputType="text"
                android:backgroundTint="#CCCCCC"/>
            <EditText
                android:id="@+id/them_hoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/them_tenthanh"
                android:hint="Họ tên"
                android:textSize="20dp"
                android:textColorHint="#959595"
                android:textColor="#373737"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:backgroundTint="#CCCCCC"/>
            <EditText
                android:id="@+id/them_ngaysinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/them_hoten"
                android:hint="Ngày sinh"
                android:textSize="20dp"
                android:textColorHint="#959595"
                android:textColor="#373737"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:backgroundTint="#CCCCCC"/>
            <EditText
                android:id="@+id/them_lienlac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/them_ngaysinh"
                android:hint="Liên lạc"
                android:textSize="20dp"
                android:textColorHint="#959595"
                android:textColor="#373737"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:backgroundTint="#CCCCCC"/>
            <EditText
                android:id="@+id/them_diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/them_lienlac"
                android:hint="Địa chỉ"
                android:textSize="20dp"
                android:textColorHint="#959595"
                android:textColor="#373737"
                android:layout_marginTop="10dp"
                android:backgroundTint="#CCCCCC"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/them_diachi"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/button_them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#5DE84D"
                    android:textColor="@color/white"
                    android:text="THÊM"
                    android:layout_marginRight="30dp"/>
                <Button
                    android:id="@+id/button_huy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/button_them"
                    android:backgroundTint="#EA4141"
                    android:textColor="@color/white"
                    android:text="HUỶ"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>